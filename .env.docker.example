# Docker Environment Variables for Nautilus Trader Admin
# Copy this file to .env for Docker deployment

# ============================================
# Database Configuration
# ============================================

# PostgreSQL (Nautilus Core Data)
POSTGRES_PASSWORD=nautilus_pass
POSTGRES_PORT=5432

# Redis (Cache & Live State)
REDIS_PASSWORD=nautilus_redis
REDIS_PORT=6379

# MySQL (Web Interface Data)
MYSQL_ROOT_PASSWORD=root
MYSQL_PASSWORD=nautilus_web_pass
MYSQL_PORT=3306

# ============================================
# Application Configuration
# ============================================

# Web Application
WEB_PORT=3000
NODE_ENV=production

# Application URL
APP_URL=http://localhost:3000

# JWT Secret (CHANGE THIS IN PRODUCTION!)
JWT_SECRET=change-this-secret-in-production-use-long-random-string

# ============================================
# Nautilus Configuration
# ============================================

# Nautilus data directory (inside container)
NAUTILUS_DATA_DIR=/app/nautilus-data

# ============================================
# Optional: External Services
# ============================================

# Email notifications (optional)
# SMTP_HOST=smtp.gmail.com
# SMTP_PORT=587
# SMTP_USER=your-email@gmail.com
# SMTP_PASSWORD=your-password

# Monitoring (optional)
# SENTRY_DSN=your-sentry-dsn

# ============================================
# Development Only
# ============================================

# Enable debug logging
# DEBUG=true

# Hot reload
# CHOKIDAR_USEPOLLING=true

