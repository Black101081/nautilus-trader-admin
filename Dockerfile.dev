# Development Dockerfile for Nautilus Trader Admin
# Optimized for hot-reload and debugging

FROM node:22-alpine

# Install system dependencies
RUN apk add --no-cache \
    python3 \
    py3-pip \
    postgresql-client \
    redis \
    gcc \
    musl-dev \
    python3-dev \
    libpq-dev \
    libc6-compat

WORKDIR /app

# Install pnpm
RUN npm install -g pnpm

# Install Python dependencies
RUN pip3 install --no-cache-dir \
    psycopg2-binary \
    redis \
    nautilus_trader \
    psutil

# Copy package files
COPY package.json pnpm-lock.yaml ./

# Install dependencies
RUN pnpm install

# Copy source code
COPY . .

# Create data directories
RUN mkdir -p /app/nautilus-data/{bars,quotes,trades,backtests}

# Expose port
EXPOSE 3000

# Start development server with hot-reload
CMD ["pnpm", "run", "dev"]

